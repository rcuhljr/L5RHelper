<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/template_name" android:text="@string/template_name" android:layout_marginTop="12px"></TextView>
<EditText android:layout_height="wrap_content" android:layout_toRightOf="@+id/template_name" android:id="@+id/template_name_box" android:layout_width="fill_parent" android:layout_marginLeft="8px" android:layout_marginRight="3px"></EditText>
<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/kept" android:id="@+id/kept_label" android:layout_below="@+id/melee_layout_box" android:layout_toRightOf="@+id/rolled_textbox" android:layout_marginLeft="3dip"></TextView><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_toRightOf="@+id/kept_textbox" android:text="@string/trait_select" android:id="@+id/spin_trait_label" android:layout_below="@+id/melee_layout_box" android:layout_marginLeft="5dip"></TextView><Spinner android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_toRightOf="@+id/kept_textbox" android:id="@+id/spin_trait" android:layout_below="@+id/spin_trait_label" android:entries="@array/attack_traits" android:layout_marginLeft="3dip"></Spinner>
<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/rolled_label" android:text="@string/rolled" android:layout_below="@+id/melee_layout_box" android:layout_toRightOf="@+id/modifier_textbox" android:layout_marginLeft="4dip"></TextView><EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/zero" android:maxLines="1" android:scrollHorizontally="true" android:scrollbarStyle="outsideOverlay" android:layout_below="@+id/modifier_label" android:width="65px" android:id="@+id/modifier_textbox" android:layout_marginLeft="4dip" android:digits="@string/digits_withnegative" android:inputType="number|numberSigned"></EditText>





<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/modifier_label" android:text="@string/modifier" android:layout_below="@+id/melee_layout_box" android:layout_marginLeft="4dip"></TextView><EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/zero" android:maxLines="1" android:scrollHorizontally="true" android:scrollbarStyle="outsideOverlay" android:width="65px" android:layout_below="@+id/rolled_label" android:id="@+id/rolled_textbox" android:layout_alignLeft="@+id/rolled_label" android:digits="@string/digits_withnegative" android:inputType="number|numberSigned"></EditText><Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/rolled_textbox" android:id="@+id/save_template" android:text="@string/save_template" android:layout_centerHorizontal="true"></Button><Button android:layout_below="@+id/save_template" android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:id="@+id/delete_template" android:text="@string/delete_template"></Button><RelativeLayout android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:layout_below="@+id/template_name_box" android:layout_width="fill_parent" android:id="@+id/melee_layout_box"><TextView android:layout_height="wrap_content" android:layout_below="@+id/template_name_box" android:layout_width="wrap_content" android:layout_toRightOf="@+id/agility_label" android:layout_marginLeft="10px" android:id="@+id/skill_rank_label" android:text="@string/skill_rank"></TextView><Spinner android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/skill_rank_label" android:layout_toRightOf="@+id/spin_agi" android:layout_marginLeft="3px" android:entries="@array/skillranks" android:id="@+id/spin_skills"></Spinner><CheckBox android:layout_height="wrap_content" android:layout_below="@+id/skill_rank_label" android:layout_width="wrap_content" android:text="@string/is_gp" android:id="@+id/use_gp" android:layout_toRightOf="@+id/spin_skills"></CheckBox><TextView android:layout_height="wrap_content" android:layout_below="@+id/template_name_box" android:layout_toRightOf="@+id/reflexes_label" android:layout_width="wrap_content" android:id="@+id/agility_label" android:text="@string/agility_mod" android:layout_marginLeft="8px"></TextView><Spinner android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/agility_label" android:id="@+id/spin_agi" android:layout_toRightOf="@+id/spin_ref" android:layout_marginLeft="6px" android:entries="@array/traitmods"></Spinner><Spinner android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/reflexes_label" android:id="@+id/spin_ref" android:entries="@array/traitmods"></Spinner><TextView android:layout_height="wrap_content" android:layout_below="@+id/template_name_box" android:layout_width="wrap_content" android:id="@+id/reflexes_label" android:text="@string/reflexes_mod"></TextView></RelativeLayout><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/save_template" android:layout_centerHorizontal="true" android:id="@+id/error_message" android:textColor="#F11"></TextView><EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/zero" android:maxLines="1" android:scrollHorizontally="true" android:scrollbarStyle="outsideOverlay" android:width="65px" android:id="@+id/kept_textbox" android:layout_alignLeft="@+id/kept_label" android:layout_below="@+id/kept_label" android:digits="@string/digits_withnegative" android:inputType="number|numberSigned"></EditText>










</RelativeLayout>
